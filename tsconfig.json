{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "jsx": "react",
    "jsxFactory": "h",
    "target": "ESNext",
    "outDir": "./assets/js",
    "sourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "watch": true,
    "baseUrl": "./typescript",
    "paths": {
      "typescript/*": [
        "*"
      ]
    },
    "strict": true
  }
}